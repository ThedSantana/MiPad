<?xml version="1.0" encoding="utf-8"?>
<!-- 	
	I use this view to inflate a button for the drag_drop_swipe_button_view, 
	If I dont instantiate a button Dynamically (when the user slides their finger over a view) 
	then I can't utilize Google's DragDropListView Components	
-->

<Button xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:background="@drawable/delete_back"
    android:layout_height="fill_parent"
    android:ellipsize="end"
    android:orientation="vertical" 
    android:text="DELETE"
    android:id="@+id/bDel">
</Button>
